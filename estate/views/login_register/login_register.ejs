<%include ../header-footer/header %>
<link rel="stylesheet" href="/stylesheets/login_register.css" />
<div class="container">
  <div class="forms-container">
    <div class="signin-signup">
      <form class="sign-in-form">
        <h2 class="title">Sign in</h2>
        <div class="input-field  ">
          <i class="fas fa-envelope"></i>
          <input type="email" id="email" placeholder="Enter Your Email">
        </div>
        <div class="input-field  ">
          <i class="fas fa-lock"></i>
          <input type="password" id="password" placeholder="Enter Your Password">
        </div>
        <input type="submit" value="Login" class="btn solid" id="btn-login" />
        <p class="social-text">Or Sign in with social platforms</p>
        <div class="social-media">
          <a href="#" class="social-icon">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-google"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>
      </form>
      <form class="sign-up-form row">
        <h2 class="title">Sign up</h2>
        <div class="input-field  col-6">
          <i class="far fa-user"></i>
          <input placeholder="Enter Your Name" type="text" id="name">
        </div>
        <div class="input-field  col-6">
          <i class="fas fa-birthday-cake"></i>
          <input placeholder="Enter Your Birthday" type="date" id="birthday">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-phone-square"></i>
          <input placeholder="Enter Your Phone" type="number" id="phone">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-map-marker-alt"></i>
          <input placeholder="Enter Your Address" type="text" id="address">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-id-card"></i>
          <input placeholder="Enter Your Identification" type="number" id="identification">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-user"></i>
          <input placeholder="Enter Your Username" type="text" id="username">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-lock"></i>
          <input placeholder="Enter Your Password" type="password" id="passwordRegis">
        </div>
        <div class="input-field   col-6 ">
          <i class="fas fa-lock"></i>
          <input placeholder="Enter Your Confirm Passwords" type="password" id="confirmPassword">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-envelope"></i>
          <input placeholder="Enter Your E-mail" type="email" id="emailRegister">
        </div>
        <div class="input-field    col-6">
          <i class="fas fa-user-tag"></i>
          <select name="role" id="role">
            <option value="user">User</option>
            <option value="owner">Owner</option>
          </select>
          <!-- <input type="password" placeholder="Role K lam o day" /> -->
        </div>
        <input type="submit" id="btn-register" class="btn" value="Sign up" />
        <p class="social-text">Or Sign up with social platforms</p>
        <div class="social-media">
          <a href="#" class="social-icon">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-google"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>
      </form>
    </div>
  </div>

  <div class="panels-container">
    <div class="panel left-panel">
      <div class="content">
        <h3>New here ?</h3>
        <p>
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
          ex ratione. Aliquid!
        </p>
        <button class="btn transparent" id="sign-up-btn">
          Sign up
        </button>
      </div>
      <img src="/img/logins.svg" class="image" alt="" />
    </div>
    <div class="panel right-panel">
      <div class="content">
        <h3>One of us ?</h3>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
          laboriosam ad deleniti.
        </p>
        <button class="btn transparent" id="sign-in-btn">
          Sign in
        </button>
      </div>
      <img src="/img/sigup.svg" class="image" alt="" />
    </div>
  </div>
</div>
<%include ../header-footer/footer %>

<script src="/javascripts/login_register.js"></script>